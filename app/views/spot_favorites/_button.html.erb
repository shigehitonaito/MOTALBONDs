<% if spot.favorited_by?(current_user) %>
	<%= link_to spot_spot_favorites_path(spot), method: :delete, remote: true, class: "link_decoration" do%>
		<i class="fas fa-thumbs-up"></i><%= spot.spot_favorites.count %>
	<% end %>
<% else %>
	<%= link_to spot_spot_favorites_path(spot), method: :post, remote: true, class: "link_decoration" do %>
		<i class="far fa-thumbs-up"></i></i><%= spot.spot_favorites.count %>
	<% end %>
<% end %>