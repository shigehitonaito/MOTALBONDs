<% if spot.bookmarked_by?(current_user) %>
	<%= link_to spot_spot_bookmarks_path(spot.id), method: :delete, remote: true, class: "link_decoration" do %>
		<i class="fas fa-bookmark"></i>
	<% end %>
<% else %>
	<%= link_to spot_spot_bookmarks_path(spot.id), method: :post, remote: true, class: "link_decoration" do %>
		<i class="far fa-bookmark"></i>
	<% end %>
<% end %>